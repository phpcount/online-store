{% extends 'main/base.html.twig' %}

{% block title %}Your Cart - OnlineStore{% endblock %}
{% block page_keywords %}Jeans, Online Store Homepage, Jackets{% endblock %}
{% block page_description %}User's cart on OnlineShop shop!{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('app-main-cart-show') }}
{% endblock %}

{% block body %}
    <div class="text-center">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="page-details mt-4">
                        <h1 class="h4 font-weight-normal title-gradient-1">Your cart:</h1>
                        <div id="app"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
<script src="{{ asset('build/services/global-store.js') }}"></script>
<script>
setDataInGlobalObj('staticStore', {
        urlApiCart: '{{ path("api_carts_get_collection") }}',
        urlApiCartProducts: '{{ path("api_cart_products_get_collection") }}',
        urlApiOrder: '{{ path("api_orders_get_collection") }}',

        urlViewProduct: '{{ path("main_product_show_blank") }}',
        urlAssetImageProducts: '{{ asset("uploads/images/products") }}'
    }
)
</script>
    {{ encore_entry_script_tags('app-main-cart-show') }}
{% endblock %}
