{% extends 'main/base.html.twig' %}

{% block title %}Homepage - OnlineStore{% endblock %}
{% block page_keywords %}Jeans, Jackets{% endblock %}
{% block page_description %}Main page of OnlineStore shop!{% endblock %}

{% block body %}
    <div class="container-fluid mt-2">
        <div class="row">
            <div class="col-lg-6">
                {% set catJeans = 'Jeans' %}
                <div class="banner banner-big">
                    <a href="#">
                        <img src="{{ asset('build/images/banner/collection/banner_1.jpg') }}" alt="banner">
                    </a>

                    <div class="banner-content">
                        <h3 class="banner-subtitle">
                            New Collection!
                        </h3>
                        <h2 class="banner-title">
                            {{ catJeans }}
                        </h2>
                        <a href="{{ path('main_category_show', {slug: catJeans|lower}) }}" class="btn btn-link">
                            Show me
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                {% set catJackets = 'Jackets' %}
                <div class="banner banner-big">
                    <a href="#">
                        <img src="{{ asset('build/images/banner/collection/banner_2.jpg') }}" alt="banner">
                    </a>

                    <div class="banner-content">
                        <h3 class="banner-subtitle">
                            Discounts Over 50%
                        </h3>
                        <h2 class="banner-title">
                            {{ catJackets }}
                        </h2>
                        <a href="{{ path('main_category_show', {slug: catJackets|lower}) }}" class="btn btn-link">
                            Show me
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-1 justify-content-center align-items-center">
            <div class="col-md-6 col-lg-4">
                {% set catHats = 'Hats' %}
                <div class="banner banner-middle">
                    <a href="#">
                        <img src="{{ asset('build/images/banner/collection/banner_3.jpg') }}" alt="banner">
                    </a>

                    <div class="banner-content">
                        <h3 class="banner-subtitle">
                            Unique!
                        </h3>
                        <a href="{{ path('main_category_show', {slug: catHats|lower}) }}" class="btn btn-link">
                            {{ catHats }}
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-4">
                {% set catDresses = 'Dresses' %}
                <div class="banner banner-middle">
                    <a href="#">
                        <img src="{{ asset('build/images/banner/collection/banner_4.jpg') }}" alt="banner">
                    </a>

                    <div class="banner-content">
                        <h3 class="banner-subtitle">
                            Fashionable!
                        </h3>
                        <a href="{{ path('main_category_show', {slug: catDresses|lower}) }}" class="btn btn-link">
                            {{ catDresses }}
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-4">
                {% set catSneakers = 'Sneakers' %}
                <div class="banner banner-middle">
                    <a href="#">
                        <img src="{{ asset('build/images/banner/collection/banner_5.jpg') }}" alt="banner">
                    </a>

                    <div class="banner-content">
                        <h3 class="banner-subtitle text-white">
                            Branded!
                        </h3>
                        <a href="{{ path('main_category_show', {slug: catSneakers|lower}) }}" class="btn btn-link">
                            {{ catSneakers }}
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {{ render(controller('App\\Controller\\Main\\EmbedController::showSimilarProducts', {
        productCount: 4,
        resultShuffle: true
    })) }}
{% endblock %}
